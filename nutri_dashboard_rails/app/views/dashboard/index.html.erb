          const count = entries.length;
          let html = '<p class="text-xs text-stone-500 mb-3">' + count + ' order-out event' + (count === 1 ? '' : 's') + ' in total</p>';
          html += '<div class="space-y-4">';
          entries.forEach(function(entry) {
            const consumed = entry._consumed || entry["_consumed"] || {};
            let dateDisplay = entry.date;
            try {
              const d = new Date(entry.date + 'T12:00:00');
              dateDisplay = d.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
