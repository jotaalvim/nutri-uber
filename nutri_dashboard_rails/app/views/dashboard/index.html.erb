              }
              html += '</div>';
            });
            html += '</div>';
            if (consumed.energy_kcal > 0) {
              let nut = consumed.energy_kcal + ' kcal';
              if (consumed.protein > 0 || consumed.carbohydrate > 0 || consumed.fat > 0) {
                nut += ' ¬∑ P ' + (consumed.protein || '‚Äî') + 'g ¬∑ C ' + (consumed.carbohydrate || '‚Äî') + 'g ¬∑ F ' + (consumed.fat || '‚Äî') + 'g';
              }
              html += '<p class="text-xs text-stone-500 mt-3">' + escapeHtml(nut) + '</p>';
            }
            html += '</div>';
          });
          html += '</div>';
          return html;
        }

        function updateOrderOutSection(entries) {
          const content = document.getElementById("order-out-history-content");
          if (content && typeof renderOrderOutContent === "function") {
            content.innerHTML = renderOrderOutContent(entries);
          }
        }
        window.updateOrderOutSection = updateOrderOutSection;

        function initOrderOutWebSocket() {
          const section = document.getElementById("order-out-history");
          if (!section) return;
          const patientId = section.dataset.patientId;
          if (!patientId) return;

          const meta = document.querySelector('meta[name="action-cable-url"]');
          const path = meta ? meta.getAttribute("content") : "/cable";
          const protocol = window.location.protocol === "https:" ? "wss:" : "ws:";
          const wsUrl = path.startsWith("ws") ? path : protocol + "//" + window.location.host + (path.startsWith("/") ? path : "/" + path);

          let socket;
          function connect() {
            socket = new WebSocket(wsUrl);
            socket.onopen = function() {
              socket.send(JSON.stringify({
                command: "subscribe",
                identifier: JSON.stringify({ channel: "PatientOrderOutChannel", patient_id: String(patientId) })
              }));
            };
            socket.onmessage = function(event) {
              try {
                const msg = JSON.parse(event.data);
                if (msg.type === "ping" || msg.type === "welcome") return;
                if (msg.message && msg.message.order_out_entries) {
                  updateOrderOutSection(msg.message.order_out_entries);
                }
              } catch (_) {}
            };
            socket.onclose = function() {
              setTimeout(connect, 3000);
            };
            socket.onerror = function() {
              socket.close();
            };
          }
          connect();
          window.addEventListener("beforeunload", function() { if (socket) socket.close(); });
        }

        function onLoad() {
          initFindFood();
          initOrderOutWebSocket();
        }
        document.addEventListener("turbo:load", onLoad);
        document.addEventListener("DOMContentLoaded", onLoad);
