            listEl.querySelectorAll("[data-nutrition-close]").forEach(btn => {
              btn.addEventListener("click", (e) => {
                e.preventDefault();
                e.stopPropagation();
                const overlay = btn.closest("[data-nutrition-overlay]");
                if (overlay) overlay.classList.add("hidden");
              });
            });
          }

          // Show results on load: server-rendered initial items first, else fetch cached
          const initialEl = document.getElementById("initial-food-items");
