              else alert(data.error || "Failed to add to food log");
            } catch (err) {
              alert(err.message || "Failed to add to food log");
            } finally {
              addLogBtn.disabled = false;
            }
          });
        }
        function escapeHtml(s) {
          const div = document.createElement("div");
          div.textContent = s || "";
          return div.innerHTML;
